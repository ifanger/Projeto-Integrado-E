<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/text_layout_alarm_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/txt_alarm_timee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/str_calendar_title"
            android:inputType="text|textCapWords|textPersonName"
            android:textSize="24sp" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/btn_set_alarm_time"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="8dp"
        android:text="@string/str_define_time"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/text_layout_alarm_title"
        app:layout_constraintStart_toStartOf="@+id/text_layout_alarm_title"
        app:layout_constraintTop_toBottomOf="@+id/alarm_repeat" />

    <Switch
        android:id="@+id/alarm_repeat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="Repetir todos os dias"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/text_layout_alarm_title"
        app:layout_constraintTop_toBottomOf="@+id/text_layout_alarm_title" />

</android.support.constraint.ConstraintLayout>